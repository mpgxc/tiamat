{
  "name": "boilerplate",
  "version": "1.0.0",
  "main": "server.ts",
  "author": "mpgxc",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@prisma/client": "^3.2.1",
    "axios": "^0.26.1",
    "bullmq": "^1.68.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "handlebars": "^4.7.7",
    "helmet": "^4.5.0",
    "husky": "^6.0.0",
    "ioredis": "^4.28.3",
    "morgan": "^1.10.0",
    "nodemailer": "^6.7.2",
    "prisma": "^3.2.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "tsyringe": "^4.6.0",
    "uuid": "^8.3.2"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "npx prisma migrate dev; node build/server.js",
    "dev": "tsnd -r tsconfig-paths/register --transpile-only --experimental-fetch  --ignore-watch node_modules --respawn src/infra/http/server.ts",
    "dev:queue": "tsnd -r tsconfig-paths/register --transpile-only --ignore-watch node_modules --respawn src/infra/queue/worker.ts",
    "dev:server": "tsnd -r tsconfig-paths/register --transpile-only --ignore-watch node_modules --respawn src/infra/http/server.ts",
    "lint": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "build": "rimraf build; babel src --extensions \".js,.ts\" --out-dir build --copy-files --no-copy-ignored"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/node": "^7.14.2",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-decorators": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/express": "^4.17.11",
    "@types/helmet": "^4.0.0",
    "@types/ioredis": "^4.28.7",
    "@types/morgan": "^1.9.2",
    "@types/node": "^16.10.3",
    "@types/nodemailer": "^6.4.4",
    "@types/typescript": "^2.0.0",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "commitizen": "^4.2.4",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.4.3"
  }
}
